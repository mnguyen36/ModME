extends layout
block content
    link(rel="stylesheet", href='/stylesheets/userlist.css')
    div.center-column
        table.user-table.center.sortable
            thead
                th Name
                th Email
                th ID
                th
            each userInList, i in userlist
                tr
                    td #{userInList.local.name}
                    td #{userInList.local.email}
                    td #{userInList._id}
                    td.remove
                        if (user._id.toString() != userInList._id.toString())
                            button.removemodal(class="fancybox.iframe", href="/remove-user?userid=#{userInList._id}&username=#{userInList.local.name}")
                        else
                            |This is you.

        div.add-new-user
            button.addusermodal(class="fancybox.iframe", href="/userlist/newuser") Add New User
    script(src="/javascripts/userlist.js")

