extends layout
block content
    div
        table(class="user-table center")
            tr
                th Name
                th Email
                th ID
            each user, i in userlist
                tr
                    td #{user.username}
                    td #{user.email}
                    td #{user._id}
                    td
                        form(action='/remove-user', method='post')
                            input(type='hidden', name="id", value=user._id)
                            button(type='submit') Remove
        a(href="/newuser") Add New User

