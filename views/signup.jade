extends layout
block content
    div.container
        form(action="/signup" method = "post")
            label Email
            input(type="text", name="email")
            br
            label Name
            input(type="text", name="name")
            br
            label Password
            input(type="password", name="password")
            button(type="submit") Sign Up
        p Sign Up <a href="/signup"> Sign Up </a>